{
  "openapi": "3.1.0",
  "info": {
    "title": "PCTX Agent Server API",
    "description": "REST API for PCTX agent mode - dynamic tool and MCP server registration with code execution",
    "license": {
      "name": "MIT",
      "identifier": "MIT"
    },
    "version": "0.1.0"
  },
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "health"
        ],
        "summary": "Health check endpoint",
        "operationId": "health",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/tools/details": {
      "post": {
        "tags": [
          "tools"
        ],
        "summary": "Get detailed information about a specific function",
        "operationId": "get_function_details",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GetFunctionDetailsRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Function details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetFunctionDetailsResponse"
                }
              }
            }
          },
          "404": {
            "description": "Function not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/tools/execute": {
      "post": {
        "tags": [
          "tools"
        ],
        "summary": "Execute TypeScript code with access to registered tools",
        "operationId": "execute_code",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ExecuteCodeRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Code executed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExecuteCodeResponse"
                }
              }
            }
          },
          "400": {
            "description": "Code execution failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/tools/list": {
      "post": {
        "tags": [
          "tools"
        ],
        "summary": "List all available tools from both local and MCP registrations",
        "operationId": "list_tools",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ListToolsRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "List of all registered tools",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListToolsResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/tools/local/register": {
      "post": {
        "tags": [
          "tools"
        ],
        "summary": "Register local tools that will be called via WebSocket callbacks",
        "operationId": "register_local_tools",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterLocalToolsRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Tools registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterLocalToolsResponse"
                }
              }
            }
          },
          "404": {
            "description": "Session not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/tools/mcp/register": {
      "post": {
        "tags": [
          "tools"
        ],
        "summary": "Register MCP servers dynamically at runtime",
        "operationId": "register_mcp_servers",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterMcpServersRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "MCP servers registration result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterMcpServersResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ErrorInfo": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "details": {
            "type": [
              "string",
              "null"
            ]
          },
          "message": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "description": "Error response",
        "required": [
          "error"
        ],
        "properties": {
          "error": {
            "$ref": "#/components/schemas/ErrorInfo"
          }
        }
      },
      "ExecuteCodeRequest": {
        "type": "object",
        "description": "Request to execute code",
        "required": [
          "code"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "timeout_ms": {
            "type": "integer",
            "format": "int64",
            "minimum": 0
          }
        }
      },
      "ExecuteCodeResponse": {
        "type": "object",
        "description": "Successful code execution response",
        "required": [
          "result",
          "execution_time_ms"
        ],
        "properties": {
          "execution_time_ms": {
            "type": "integer",
            "format": "int64",
            "minimum": 0
          },
          "result": {
            "type": "object"
          }
        }
      },
      "GetFunctionDetailsRequest": {
        "type": "object",
        "description": "Request to get function details",
        "required": [
          "namespace",
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "namespace": {
            "type": "string"
          }
        }
      },
      "GetFunctionDetailsResponse": {
        "type": "object",
        "description": "Response with function details",
        "required": [
          "namespace",
          "name",
          "description",
          "parameters",
          "return_type"
        ],
        "properties": {
          "description": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "namespace": {
            "type": "string"
          },
          "parameters": {
            "type": "object"
          },
          "return_type": {
            "type": "string"
          }
        }
      },
      "HealthResponse": {
        "type": "object",
        "description": "Health check response",
        "required": [
          "status",
          "version"
        ],
        "properties": {
          "status": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        }
      },
      "ListToolsRequest": {
        "type": "object",
        "description": "Request to list all available tools"
      },
      "ListToolsResponse": {
        "type": "object",
        "description": "Response with list of tools",
        "required": [
          "tools"
        ],
        "properties": {
          "tools": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ToolInfo"
            }
          }
        }
      },
      "LocalToolDefinition": {
        "type": "object",
        "required": [
          "namespace",
          "name",
          "description",
          "parameters"
        ],
        "properties": {
          "description": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "namespace": {
            "type": "string"
          },
          "parameters": {
            "type": "object"
          }
        }
      },
      "McpServerConfig": {
        "type": "object",
        "required": [
          "name",
          "url"
        ],
        "properties": {
          "auth": {
            "type": [
              "object",
              "null"
            ]
          },
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      },
      "RegisterLocalToolsRequest": {
        "type": "object",
        "description": "Request to register local tools",
        "required": [
          "session_id",
          "tools"
        ],
        "properties": {
          "session_id": {
            "type": "string"
          },
          "tools": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LocalToolDefinition"
            }
          }
        }
      },
      "RegisterLocalToolsResponse": {
        "type": "object",
        "description": "Response after registering local tools",
        "required": [
          "registered"
        ],
        "properties": {
          "registered": {
            "type": "integer",
            "minimum": 0
          }
        }
      },
      "RegisterMcpServersRequest": {
        "type": "object",
        "description": "Request to register MCP servers",
        "required": [
          "servers"
        ],
        "properties": {
          "servers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/McpServerConfig"
            }
          }
        }
      },
      "RegisterMcpServersResponse": {
        "type": "object",
        "description": "Response after registering MCP servers",
        "required": [
          "registered",
          "failed"
        ],
        "properties": {
          "failed": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "registered": {
            "type": "integer",
            "minimum": 0
          }
        }
      },
      "ToolInfo": {
        "type": "object",
        "description": "Tool information in list response",
        "required": [
          "namespace",
          "name",
          "description",
          "source"
        ],
        "properties": {
          "description": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "namespace": {
            "type": "string"
          },
          "source": {
            "$ref": "#/components/schemas/ToolSource"
          }
        }
      },
      "ToolSource": {
        "type": "string",
        "enum": [
          "mcp",
          "local"
        ]
      }
    }
  },
  "tags": [
    {
      "name": "tools",
      "description": "Tool management and execution endpoints"
    },
    {
      "name": "health",
      "description": "Health check endpoints"
    }
  ]
}
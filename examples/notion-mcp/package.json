{
  "name": "notion-mcp-example",
  "version": "1.0.0",
  "description": "Example Notion MCP Server with pctx",
  "private": true,
  "scripts": {
    "start:notion": "node -e \"require('dotenv').config(); require('child_process').spawn('npx', ['-y', '@notionhq/notion-mcp-server', '--transport', 'http', '--port', process.env.NOTION_MCP_PORT || '3000'], {stdio: 'inherit', env: process.env})\"",
    "start:pctx": "pctx start --port ${PCTX_PORT:-8080}",
    "start": "node start-local.js",
    "test:notion": "node test-connection.js",
    "test:pctx": "curl -X POST http://127.0.0.1:8080/mcp -H 'Content-Type: application/json' -d '{\"jsonrpc\":\"2.0\",\"method\":\"initialize\",\"params\":{},\"id\":1}'"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "node-fetch": "^2.7.0"
  }
}
